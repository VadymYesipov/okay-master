<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Sign Up</servlet-name>
        <servlet-class>servlets.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sign Up</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Sign In</servlet-name>
        <servlet-class>servlets.SignIn</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sign In</servlet-name>
        <url-pattern>/signIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Selector</servlet-name>
        <servlet-class>servlets.Selector</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Selector</servlet-name>
        <url-pattern>/selector</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Price getter</servlet-name>
        <servlet-class>servlets.PriceGetter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Price getter</servlet-name>
        <url-pattern>/priceGetter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Rent</servlet-name>
        <servlet-class>servlets.Rent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rent</servlet-name>
        <url-pattern>/rent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Car adder</servlet-name>
        <servlet-class>servlets.CarAdder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Car adder</servlet-name>
        <url-pattern>/carAdder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Car deleter</servlet-name>
        <servlet-class>servlets.CarDeleter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Car deleter</servlet-name>
        <url-pattern>/carDeleter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Block unblock</servlet-name>
        <servlet-class>servlets.BlockUnblock</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Block unblock</servlet-name>
        <url-pattern>/blockUnblock</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlets.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Changer</servlet-name>
        <servlet-class>servlets.Changer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Changer</servlet-name>
        <url-pattern>/carChanger</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cancel</servlet-name>
        <servlet-class>servlets.CancelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cancel</servlet-name>
        <url-pattern>/cancelServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Punisher</servlet-name>
        <servlet-class>servlets.Punisher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Punisher</servlet-name>
        <url-pattern>/punisher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LocaleServlet</servlet-name>
        <servlet-class>servlets.LocaleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocaleServlet</servlet-name>
        <url-pattern>/locale</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>listeners.ContextListener</listener-class>
    </listener>
    
    <welcome-file-list>
        <welcome-file>pages/signIn.jsp</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/orders</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>